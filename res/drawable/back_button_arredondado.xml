<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/back_button_login_pressed" />

            <stroke android:width="1dp" android:color="#222222" />

            <corners android:radius="7dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>

            <!-- estilo de cor fundo do botão -->
            <solid android:color="@color/back_button_login" />

            <!-- estilo da linha de borda -->
            <stroke android:width="1dp" android:color="#222222" />

            <!-- estilo para espacamentos -->
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <!-- raio dos cantos do botão -->
            <corners android:radius="6dp" />
        </shape></item>

</selector>